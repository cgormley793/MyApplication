<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView_Reg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="36dp"
        android:text="@string/txtview_Reg_title"
        app:layout_constraintBottom_toTopOf="@+id/editText_userfirstname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_userfirstname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:hint="@string/txt_userfirstname"
        android:inputType="textPersonName"
        android:text="@string/txt_userfirstname"
        app:layout_constraintBottom_toTopOf="@+id/editText_userlastname"
        app:layout_constraintEnd_toEndOf="@+id/editText_userlastname"
        app:layout_constraintStart_toStartOf="@+id/editText_userlastname"
        app:layout_constraintTop_toBottomOf="@+id/textView_Reg_title" />

    <EditText
        android:id="@+id/editText_userlastname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/txt_userlastname"
        app:layout_constraintBottom_toTopOf="@+id/editText_useremail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_userfirstname" />

    <EditText
        android:id="@+id/editText_useremail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/txt_log_email"
        app:layout_constraintBottom_toTopOf="@+id/editText_Password"
        app:layout_constraintEnd_toEndOf="@+id/editText_userfirstname"
        app:layout_constraintStart_toStartOf="@+id/editText_reenterpassword"
        app:layout_constraintTop_toBottomOf="@+id/editText_userlastname" />

    <EditText
        android:id="@+id/editText_Password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/txt_log_pass"
        app:layout_constraintBottom_toTopOf="@+id/editText_reenterpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_useremail" />

    <EditText
        android:id="@+id/editText_reenterpassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/retxt_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Password" />

    <Button
        android:layout_width="141dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:text="@string/button_createaccount"
        app:layout_constraintBottom_toTopOf="@+id/textView_Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_reenterpassword" />

    <TextView
        android:id="@+id/textView_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="68dp"
        android:text="@string/textview_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>